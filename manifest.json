{
  "manifest_version": 2,
 
  "name": "SIMKL Enhacer",
  "version": "0.1.2",
  "description": "Add AnimeFLV to SIMKL",
  "permissions": [
    "webNavigation",
    "https://animeflv.net/",
    "https://jkanime.net/"
  ],
 
  "content_scripts": [{
    "css": ["style.css"],
    "js": ["content.js"],
    "matches": ["https://simkl.com/anime/*/*/episode-*/*", "https://simkl.com/anime/*/*"],
    "run_at": "document_end"
  }],
  "web_accessible_resources":
    [
        "img/*"
    ]
 
}